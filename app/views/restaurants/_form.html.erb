<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-3">
      <%= simple_form_for(restaurant) do |r| %>
        <%= r.input :name %>
        <%= r.input :address %>
        <%= r.input :phone_number %>
        <%= r.input :category %>
        <%= r.button :submit, class: "btn btn-block btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
